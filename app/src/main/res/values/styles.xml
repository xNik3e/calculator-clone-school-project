<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="control_text_style_headline">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@string/control_font_family_headline</item>
    </style>

    <style name="DisplayText">
        <item name="android:gravity">top|left|right|center_vertical|center_horizontal|fill_horizontal|center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:layoutDirection">@null</item>
    </style>

    <style name="DisplayText.Formula">
        <item name="minTextSize">32sp</item>
        <item name="android:gravity">top|center_vertical</item>
        <item name="maxTextSize">72sp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="stepTextSize">8sp</item>
    </style>
    <style name="DisplayText.Results">
        <item name="android:textSize">32sp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="maxTextSize">72sp</item>
        <item name="minTextSize">24sp</item>
        <item name="stepTextSize">8dp</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:gravity">top|center_vertical</item>
    </style>

    <style name="DisplayText.LandscapeFormula">
        <item name="minTextSize">16sp</item>
        <item name="android:gravity">top|center_vertical</item>
        <item name="maxTextSize">32sp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="stepTextSize">8sp</item>
    </style>
    <style name="DisplayText.LandscapeResults">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="maxTextSize">24sp</item>
        <item name="minTextSize">8sp</item>
        <item name="stepTextSize">8dp</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:gravity">top|center_vertical</item>
    </style>


    <style name="AdvancedPadLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AdvancedPadLayout.AdvancedTab">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AdvancedPadLayout.Numbers">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:layout_weight">291</item>
    </style>
    <style name="AdvancedPadLayout.OP">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingEnd">27dp</item>
        <item name="android:layout_weight">118</item>
    </style>

    <style name="ActionButtonsStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/panel_button_bcg</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="ActionButtonsStyle.Advanced">
        <item name="android:textAppearance">@style/ActionButtonsTextAppearance</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/panel_button_bcg</item>
    </style>

    <style name="ActionButtonsStyle.Advanced.Text">
        <item name="android:textAppearance">@style/ActionButtonsTextAppearance</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ActionButtonsStyle.Numbers">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ActionButtonsStyle.Special">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionButtonsStyle.Operator">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="ActionButtonsStyle.Operator.Text">
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ActionButtonsTextAppearance">
        <item name="android:fontFamily">Slate-book</item>
        <item name="android:textSize">24sp</item>

    </style>


</resources>